// room script file


function hHotspot1_WalkOn(Hotspot *theHotspot)
{
cEgo.ChangeRoom(3, 47, 161, eDirectionLeft);
}



function room_LeaveTop()
{
cEgo.ChangeRoom(7, 81, 191, eDirectionRight);
}

function room_AfterFadeIn()
{
AudioChannel *myChannel = aH6H_BM.Play(eAudioPriorityNormal);
myChannel.Volume = 15;
}

function oCatseye_Look(Object *theObject, CursorMode mode)
{
Display("A shiny green gemstone that looks like a cats eye.");
cEgo.Say("Just what I need to make those scissors");
}

function oCatseye_Talk(Object *theObject, CursorMode mode)
{
Display("The stone can't talk.");
}


function oCatseye_Interact(Object *theObject, CursorMode mode)
{
cEgo.Walk(289, 100, eBlock, eWalkableAreas);
cEgo.FaceDirection(eDirectionRight);
cEgo.LockView(5);
cEgo.Animate(0, 5, eOnce, eBlock, eBackwards);
cEgo.UnlockView();
oCatseye.Visible=false;
Display("You picked up the illustrious stone Catseye.");
cEgo.AddInventory(iCatseye);
}

function oCatseye_UseInv(Object *theObject, CursorMode mode)
{
if (cEgo.ActiveInventory == iBloodyknife)
cEgo.Say("Azaray niti zazu ma la. Make the scissors of Gria and come to life for me.");
cEgo.LoseInventory(iCatseye);
cEgo.LoseInventory(iBloodyknife);
cEgo.AddInventory(iDemonscissors);
}
